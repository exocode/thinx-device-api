{
	"_id": "_design/users",
	"language": "javascript",
	"views": {
		"owners_by_username": {
			"map": "function (doc) { if(doc.username) { emit (doc.username, doc.password, doc); } }"
		},
		"owners_by_email": {
			"map": "function (doc) { if(doc.email) { emit (doc.email, doc.owner, doc.username, doc.activation, doc); } }"
		},
		"owners_by_activation": {
			"map": "function (doc) { if(doc.activation) { emit (doc.activation, doc.owner, doc.username); } }"
		},
		"owners_by_id": {
			"map": "function (doc) { if(doc.owner) { emit (doc); } }"
		},
		"owners_by_resetkey": {
			"map": "function (doc) { if(doc.reset_key) { emit (doc.reset_key, doc.owner, doc.username); } }"
		},
		"owners_by_apikey": {
			"map": "function (doc) { if(doc.api_keys.includes(api_key)) { emit (doc.owner, doc); } }"
		},
		"ssh_keys_by_owner": {
			"map": "function (doc) { if(doc.id) { emit (doc.ssh_keys); } }"
		}
	}
}
